﻿@model IEnumerable<PhotoAlbum.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<p>
    <span class="glyphicon glyphicon-plus"></span>@Html.ActionLink("Add a new Photo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserFileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.UserFileName, "Details", new { Id = item.Id })
                @*@Html.DisplayFor(modelItem => item.UserFileName)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileType)
            </td>
            @*<td>
                    <img src="@Url.Content(item.FilePath)" />
                </td>*@
            <td>
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
